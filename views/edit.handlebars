<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div class="container-sm m-5">
    <div class="row">
      <div class="col-sm-6">
        <div class="mb-3">
          <label class="form-label">名稱</label>
          <input class="form-control" type="text" style="width:300px" placeholder="請輸入餐廳名稱 ..." name="name"
            value="{{ restaurant.name }}">
        </div>
        <div class="mb-3">
          <label class="form-label">餐廳類別</label>
          <input list="titles" class="form-control" style="width:200px" name="category" placeholder="下拉式選單"
            value="{{ restaurant.category }}">
          <datalist id="titles">
            <option>美式</option>
            <option>義式</option>
            <option>日式</option>
            <option>韓式</option>
            <option>台式</option>
            <option>法式</option>
          </datalist>
        </div>
        <div class="mb-3">
          <label class="form-label">電話</label>
          <input class="form-control" style="width: 200px" placeholder="請輸入餐廳電話 ..." name="phone"
            value="{{ restaurant.phone }}">
        </div>
        <div class="mb-3">
          <label class="form-label">地址</label>
          <input class="form-control" placeholder="請輸入餐廳地址 ..." name="location" value="{{ restaurant.location }}">
        </div>
        <div class="mb-3">
          <label class="form-label">圖片網址</label>
          <input class="form-control" placeholder="請輸入餐廳圖片網址 ..." name="image" value="{{ restaurant.image }}">
        </div>
        <div class="mb-3">
          <label class="form-label">GOOGLE MAP網址</label>
          <input class="form-control" placeholder="請輸入google map網址 ..." name="google_map"
            value="{{ restaurant.google_map }}">
        </div>
        <div class="mb-3">
          <label class="form-lable">評分</label>
          <input type="number" name="rating" min="0" max="5" step="0.1" value="{{restaurant.rating }}">
        </div>
        <div class="mb-3">
          <label class="form-lable">敘述</label>
          <textarea rows="3" cols="65" name="description">{{ restaurant.description }}</textarea>
        </div>
      </div>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a href="/">back</a>
  </div>
</form>