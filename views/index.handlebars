<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳 or 分類（若輸入多個關鍵字，請以空格分隔）"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <a class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="d-flex justify-content-end">
              <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link">Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button class="btn btn-link">Detail</button></a>
              <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button class="btn btn-danger" type="submit">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="d-flex flex-column align-items-center mb-4">
  <h4 style="color:dimgray">Didn't find your favorite restaurant?</h4>
  <a href="./restaurants/new">
    <button type="button" class="btn btn-outline-secondary">Create a new one</button>
  </a>
</div>